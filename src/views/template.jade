doctype html
html(lang='en', xmlns='http://www.w3.org/1999/xhtml')
  head
    meta(charset='utf-8')
    title

    block bootstrap
      // Latest compiled and minified CSS
      link(rel='stylesheet', href='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css')
      // Optional theme
      link(rel='stylesheet', href='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap-theme.min.css')
  body
    input#csrfToken(type="hidden", name="_csrf", value="#{csrfToken}")
    header#customHeader.navbar.navbar-fixed-top.navbar-custom
      .container
        nav
          .container-fluid
            .navbar-header
              a.navbar-brand(href='#')
                img(alt='Brand', src='assets/img/PackifyLogo.png', width='100', height='100')
          .collapse.navbar-collapse
            ul.nav.navbar-nav.navbar-right
              li.dropdown.dropdown-custom
                a.dropdown-toggle(href='#', data-toggle='dropdown', role='button')
                  | Account
                  span.caret
                ul.dropdown-menu
                  li
                    a(href='/signin') Sign In
                  li
                    a(href='#') Trips
                  li
                    a(href='#') Settings
    block content
      #myContent.container(style='padding-top:150px')

    block jquery
      // Latest compiled and minified JavaScript
      script(src='https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js')
      script(src='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/js/bootstrap.min.js')

    block scripts

