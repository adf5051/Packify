extends ./template.jade

block content
  #myContent.container(style='padding-top:150px')
    .row
      .col-sm-4.col-sm-push-4
        input#csrfToken(type="hidden", name="_csrf", value="#{csrfToken}")
        ul.list-group
          li.list-group-item Name: #{name}
          li.list-group-item Email: #{email}
          li.list-group-item Username: #{username}
        a.btn.btn-default(href="/accountDetailsModify") Update

